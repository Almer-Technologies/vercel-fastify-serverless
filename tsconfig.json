{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
    },
    "lib": ["ES2022"],
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types",
        "lib/types"
    ]
}
